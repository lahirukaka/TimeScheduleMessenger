<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ash_1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TextView
        android:id="@+id/view_list_number"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/phone_dark"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/view_list_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_list_delete"
            android:padding="5dp"
            android:textColor="#FF0000"
            android:focusable="true"
            android:drawableLeft="@drawable/delete"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
    </LinearLayout>

    <TextView
        android:id="@+id/view_list_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/time_dark"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/view_list_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/ash_2"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>
